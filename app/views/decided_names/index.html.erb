<% if @agreed_names.any? %>
  <div class="m-4">
    <ul class="list bg-base-100 rounded-box shadow-md">
      <li class="p-4 pb-2 text-xs opacity-60 tracking-wide font-semibold">Navne, som I begge synes om (<%= @agreed_names.size %>)</li>

      <% @agreed_names.each do |name| %>
        <li class="list-row py-2">
          <div class="flex flex-row items-center <%= "text-#{name.gender_color}" %>">
            <%= name.name %>
            <%= name.gender_symbol %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @liked_names.any? %>
  <div class="m-4 mb-24">
    <ul class="list bg-base-100 rounded-box shadow-md">
      <li class="p-4 pb-2 text-xs opacity-60 tracking-wide font-semibold">Navne, som du synes om (<%= @liked_names.size %>)</li>

      <% @liked_names.each do |decided_name| %>
        <li class="list-row py-1">
          <div class="flex flex-row items-center font-medium <%= "text-#{decided_name.name.gender_color}" %>">
            <%= decided_name.name.name %>
            <%= decided_name.name.gender_symbol %>
          </div>

          <%= link_to decided_name_path(decided_name), data: { turbo_method: :delete, turbo_confirm: "Er du sikker?" }, class: "btn btn-square btn-ghost" do %>
            <svg class="size-[1.2em] list-col-grow" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="size-6">
              <path strokeLinecap="round" strokeLinejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
            </svg>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>

<% if @agreed_names.none? && @liked_names.none? %>
  <div class="m-4">
    <p class="text-center text-xs opacity-60">Ingen navne endnu</p>
  </div>
<% end %>
